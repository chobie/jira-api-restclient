{
    "name": "chobie/jira-api-restclient",
    "description": "JIRA REST API Client",
    "keywords": ["jira","rest","api"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shuhei Tanuma",
            "homepage": "http://chobie.github.io/",
            "email": "chobieeee@php.net"
        }
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "aik099/coding-standard": "dev-master",
        "squizlabs/php_codesniffer": "^2.6",
        "yoast/phpunit-polyfills": "^1.0",
        "phpspec/prophecy": "^1.10"
    },
    "autoload": {
        "psr-4" : {
            "chobie\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\chobie\\": "tests/"
        }
    },
	"scripts": {
		"stan": "phpstan analyse",
		"stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^1.0.0 && mv composer.backup composer.json"
	},
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
